# Database
DATABASE_URL="postgresql://username:password@localhost:5432/medorder?schema=public"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# Auth0 Configuration for Backend (.env)
AUTH0_ISSUER_BASE_URL='https://your-tenant.auth0.com'
AUTH0_AUDIENCE='https://api.med-order-portal.com'

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Twilio Configuration
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_MESSAGING_SERVICE_SID="MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" # optional, preferred
TWILIO_STATUS_WEBHOOK_URL="http://localhost:3001/notifications/webhooks/twilio-sms-status" # optional

# Email (SMTP / SendGrid)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"                 # For SendGrid SMTP, use 'apikey'
SMTP_PASS="your_sendgrid_api_key"  # For SendGrid SMTP, use API key as password
EMAIL_FROM="no-reply@medportal.com"
SMTP_API="your_sendgrid_api_key"   # Optional: If provided, used as fallback

# Other Configuration
FRONTEND_URL="http://localhost:3000"
PORT=3001
CORS_ORIGIN="http://localhost:3000"