{
  "name": "med-order-portal",
  "version": "1.0.0",
  "description": "Medical Ordering Portal - Enterprise application for cash-pay medication and medical-supply orders",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "integrations"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace frontend dev\" \"yarn workspace backend start:dev\"",
    "build": "yarn workspace frontend build && yarn workspace backend build",
    "test": "yarn workspaces run test",
    "test:coverage": "yarn workspaces run test:coverage",
    "lint": "yarn workspaces run lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "type-check": "yarn workspaces run type-check",
    "db:migrate": "yarn workspace backend db:migrate",
    "db:seed": "yarn workspace backend db:seed",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {
    "nodemailer": "^7.0.5"
  }
}
